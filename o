ls -al /dev/disk/by-id blkid cat /proc/cpuinfo lscpu dmesg Alt + SysRq REISUB sync && echo 3 > /proc/sys/vm/drop_caches
mount -t ext4 -o noatime,commit=60 /dev/sd /mnt/1 e4defrag e2fsck -D smartctl -a /dev/sd hdparm -I /dev/sd cfdisk mkfs.ext4 -m 1 -i 8388608 /dev/sd
find / -name \*.log tree /sys/class/hwmon/
mitigations=off nowatchdog quiet
